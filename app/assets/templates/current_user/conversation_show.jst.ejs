<h1> Hello from message show!</h1>
<% if (conversation.get("user_one") !== undefined) { %>
<p>Conversation between <%= conversation.get("user_one").username %> and <%= conversation.get("user_two").username %> </p>
<ul>
  <% conversation.replies().each(function(reply) { %>
    <li><%= reply.get("user").username %>: <%= reply.get("body") %></li>
  <% }) %>
</ul>
<% } %>
<form id="send-message">
  <label for="body">Send a Message</label>
  <textarea name="conversation_reply[body]" id="body"></textarea>
  <button>Send</button>
</form>
