<section class="face-view group">
  <form>
    <div class="prof-section">
      <img src="https://s3.amazonaws.com/codevelopavatarproduction/edit_profile_icon.png" class="edit-pencil" id="profile-edit-pencil">
      <img class="profile-picture" src="<%= user.escape('avatar_url') %>">
    </div>
    <input type="file" name="user[avatar]" id="input-user-avatar"/>
  </form>
  <div class="prof-words group">
    <h1 id="username"><%= user.escape('username') %></h1>
    <h1 id="facts"><%=user.escape('age')%> | <%=user.escape('language')%></h1>
  </div>
</section>
<section class="content-selector-buttons group">
  <ul class="tabs" data-content-tabs="#content-tabs">
    <li><button id="about-button" class="active">About</button></li>
    <li><button id="question-button">Questions</button></li>
  </ul>
</section>
<section class="content-tabs group"></section>
<section class="self-facts-view group">
  <div id="language" class="group">
    <h3>I program in:</h3>
    <div>
    <img src="https://s3.amazonaws.com/codevelopavatarproduction/edit_profile_icon.png" class="edit-pencil edit-button" id="change-language">
      <ul>
        <li><%=user.escape('language')%></li>
      </ul>
    </div>
  </div>

  <div id="details">
    <h3>My details</h3>
    <img src="https://s3.amazonaws.com/codevelopavatarproduction/edit_profile_icon.png" class="edit-pencil edit-button" id="change-details">
    <ul>
      <li class="group">
        <label>Age:</label>
        <p><%= user.escape('age') %></p>
      </li>
      <li class="group">
        <label>Job:</label>
        <p><%= user.escape('job') %></p>
      </li>
      <li class="group">
        <label>Looking For:</label>
        <p><%= user.escape('looking_for') %></p>
      </li>
    </ul>
  </div>
</section>
<script>
  $(".prof-section").click( function() {
    $("#input-user-avatar").trigger('click');
  });

  $(".content-selector-buttons button").click( function(event) {
    $(".content-selector-buttons button").removeClass("active");
    $(event.currentTarget).addClass("active");
  })
</script>
