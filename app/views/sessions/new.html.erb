<div id="sign-in-area">
  <img src="https://s3.amazonaws.com/codevelopavatarproduction/codeveloplogoupdated.png" id="site-title">
  <h1>Sign In</h1>

  <form action="<%= session_url %>" method="post">
    <%= user_auth_token %>
    <div id="username-area" class="group">
      <label for="username">Username</label>
      <input type="text" name="user[username]" id="username">
    </div>

    <div id="password-area" class="group">
      <label for="password">Password</label>
      <input type="password" name="user[password]" id="password">
    </div>
    <div class="group">
      <input type="submit" value="Sign in" class="btn-submit">
    </div>
  </form>

  <span id="the-line"></span>
  <p id="separating-line">Or</p>

  <div class="other-login-buttons group">
    <a class="btn-github" href="../auth/github">Sign in with Github!</a>
  </div>

</div>
